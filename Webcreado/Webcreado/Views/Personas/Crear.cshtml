@model Webcreado.Models.Persona

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Persona</h4>
<hr />
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <section class="col col-6">
                    <div class="form-group">
                        <label asp-for="Cedula" class="control-label"></label>
                        <input asp-for="Cedula" maxlength="10" required class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                </section>
                <section class="col col-6">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input type="text" asp-for="Nombre" required class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </section>
                <section class="col col-6">
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input type="text" asp-for="Apellido" required class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </section>
                <section class="col col-6">
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input type="text" asp-for="Direccion" required class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </section>
                <section class="col col-6">
                    <div class="form-group">
                        <label asp-for="Genero" class="control-label"></label>
                        <input type="text" asp-for="Genero" required class="form-control" />
                        <span asp-validation-for="Genero" class="text-danger"></span>
                    </div>
                </section>
            </div>
                <div class="row">
                    <section class="col col-6">
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </section>
                </div>
              
</form>  

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
